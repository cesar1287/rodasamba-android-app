<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:background="@drawable/info_window">

    <TextView android:id="@+id/info_event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Samba do ZÃ©"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_weight="2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2">
        <TextView android:id="@+id/info_event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22JUL"
            android:textColor="@color/red"
            android:textStyle="normal"
            android:textSize="18sp"
            android:gravity="left"
            android:layout_weight="1"/>
        <TextView android:id="@+id/info_event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18:00"
            android:textColor="@color/red"
            android:textStyle="normal"
            android:textSize="18sp"
            android:gravity="right"
            android:layout_weight="1"/>
        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:text="@string/info_window_plus"
        android:layout_weight="1"/>

</LinearLayout>